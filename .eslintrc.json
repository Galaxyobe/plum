{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "rules": {
    	"eqeqeq": 2,
		"quotes": ["error", "single"],
    	"indent": ["error", 4],
    	"semi": [2, "always"],
    	"space-before-function-paren": [0, "always"],
    	"new-parens": 2,
    	"no-multiple-empty-lines": [1, {"max": 2}],
    	"padded-blocks": 2
    },
    "env": {
        "browser": true,
        "node": true
    }
}